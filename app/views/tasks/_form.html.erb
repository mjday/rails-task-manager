<%= form_for @task do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  <% if @task.id %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <% end %>
  <%= f.button class: "btn btn-default btn-primary" %>

</div>
<% end %>


<%= link_to "Back to list", tasks_path %>
